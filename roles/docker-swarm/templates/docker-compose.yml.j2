version: "3.8"

services:
  web:
    image: php:7.4-apache
    ports:
      - "8080:80"
    volumes:
      - /var/www/html:/var/www/html
    depends_on:
      - db
    environment:
      DB_HOST: db
      DB_USER: root
      DB_PASSWORD: {{ mysql_root_password }}
      DB_NAME: test_db
    deploy:
      replicas: 1

  db:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_password }}
      MYSQL_DATABASE: test_db
    volumes:
      - db_data:/var/lib/mysql
    deploy:
      replicas: 1

volumes:
  db_data:

